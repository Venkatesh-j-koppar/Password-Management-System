<%- include('header') %>
      <div class="container">
        <div class="row">
          
          <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-title ">Employee Details Form</div>
              <div class="panel-body">
                <form action="/password-detail/edit/<%= record._id %>" id="Passwordform" class="form-horizontal" method="post" role="form">
                  <% if(success!=""){%>
                    <p style="color:green; text-align: center;"><%= success %></p>
                   <% }%> 
                    <div class="form-group">
                        <label for="username" class="col-md-3 control-label">Password Details</label>
                        <div class="col-md-9">
                        <select class="form-control" name="pass_cat" id="">
                         
                            <option value="">Choose Password Category</option>
                            <% if(records.length>0) 
                              records.forEach((row)=>{
                            %>
                            <option value="<%= row.password_category%>" <% if(row.password_category==record.password_category){ %>selected<%}%>><%= row.password_category%></option>
                          <% })%>

                        </select>
                        </div>
                      </div>
                      
                      <div class="form-group">
                        <label for="username" class="col-md-3 control-label">Project Name</label>
                        <div class="col-md-9">
                          <input  type="text-box" class="form-control" name="project_name" placeholder="Enter Your Project Name" value="<%= record.project_name %>">
                        </input>
                        </div>
                      </div>
    
    
    
    
                    <div class="form-group">
                    <label for="username" class="col-md-3 control-label">Password Details</label>
                    <div class="col-md-9">
                      <textarea id="editor" row="5" class="form-control" name="pass_details">"<%= record.password_details
                        %>"</textarea>
                    </div>
                  </div>
                  <input type="hidden" name="id" value="<%= record._id %>">
                    <div class="form-group">
                    <!-- Button -->
                    <div class="col-md-offset-3 col-md-9">
                      <input type="submit" name="submit" value="Edit" class="btn btn-primary">
                    </div>
                  </div>
    
                  <p><a href="/passwordCategory">View All Category Page</a></p>
    
    
    
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
  
  <%- include('footer')%>  