<%- include('header') %>
      <div class="container">
        <div class="row">
          
          <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-title ">Employee Details Form</div>
              <div class="panel-body">
                <form action="/add-new-password" id="Passwordform" class="form-horizontal" method="post" role="form">
                  <% if(success!=""){%>
                    <p style="color:green; text-align: center;"><%= success %></p>
                   <% }%> 
                    <div class="form-group">
                        <label for="username" class="col-md-3 control-label">Password Details</label>
                        <div class="col-md-9">
                        <select class="form-control" name="pass_cat" id="">
                         
                            <option value="">Choose Password Category</option>
                            <% if(records.length>0) 
                              records.forEach((row)=>{
                            %>
                            <option value="<%= row.password_category%>"><%= row.password_category%></option>
                          <% })%>

                        </select>
                        </div>
                      </div>
                      
                      <div class="form-group">
                        <label for="username" class="col-md-3 control-label">Project Name</label>
                        <div class="col-md-9">
                          <input  type="text-box" class="form-control" name="project_name" placeholder="Enter Your Project Name">
                        </input>
                        </div>
                      </div>
    
    
    
    
                    <div class="form-group">
                    <label for="username" class="col-md-3 control-label">Password Details</label>
                    <div class="col-md-9">
                      <textarea id="editor"  row="5" class="form-control" name="pass_details" placeholder="Enter Your Password Details"></textarea>
                    </div>
                  </div>
    
                    <div class="form-group">
                    <!-- Button -->
                    <div class="col-md-offset-3 col-md-9">
                      <input type="submit" name="submit" value="Add password" class="btn btn-primary">
                    </div>
                  </div>
    
                  <p><a href="/passwordCategory">View All Category Page</a></p>
    
    
    
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
  
  <%- include('footer')%>  